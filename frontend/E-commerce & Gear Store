<body>

    <h1>Sports Gear Store</h1>

    <div class="container">
        <div class="product">
            <img src="https://via.placeholder.com/200" alt="Football">
            <h3>Football</h3>
            <p class="price">$25 <span class="discount">$30</span></p>
            <button onclick="addToCart('Football', 25)">Add to Cart</button>
        </div>

        <div class="product">
            <img src="https://via.placeholder.com/200" alt="Running Shoes">
            <h3>Running Shoes</h3>
            <p class="price">$50 <span class="discount">$60</span></p>
            <button onclick="addToCart('Running Shoes', 50)">Add to Cart</button>
        </div>

        <div class="product">
            <img src="https://via.placeholder.com/200" alt="Gym Gloves">
            <h3>Gym Gloves</h3>
            <p class="price">$15 <span class="discount">$20</span></p>
            <button onclick="addToCart('Gym Gloves', 15)">Add to Cart</button>
        </div>
    </div>

    <div id="cart">
        <h2>Shopping Cart</h2>
        <ul id="cart-items"></ul>
        <p><strong>Total: $<span id="total">0</span></strong></p>
    </div>

    <script>
        let cart = [];
        let total = 0;

        function addToCart(item, price) {
            cart.push({ item, price });
            total += price;
            updateCart();
        }

        function updateCart() {
            const cartList = document.getElementById("cart-items");
            cartList.innerHTML = "";
            cart.forEach(product => {
                let li = document.createElement("li");
                li.textContent = `${product.item} - $${product.price}`;
                cartList.appendChild(li);
            });
            document.getElementById("total").textContent = total;
        }
    </script>

